@model MoneyRemittance.web.Models.CreateCustomerViewModel

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div id="div-create-container"> 
        <div class="div-custname-wrapper">
            <span>
                @Html.TextBoxFor(model => model.FirstName, new { @class = "main-editor-for", @placeholder = @Html.DisplayNameFor(model => model.FirstName), @id = "first_name" })
            </span>
            <br />
            <span>@Html.ValidationMessageFor(model => model.FirstName)</span>
        </div>

        <div class="div-custname-wrapper">
            <span>
                @Html.TextBoxFor(model => model.LastName, new { @class = "main-editor-for", @placeholder = @Html.DisplayNameFor(model => model.LastName), @id = "last_name" })
            </span>
            <br />
            <span>@Html.ValidationMessageFor(model => model.LastName)</span>
        </div>

        <div class="div-email-country-wrapper">
            <span>
                @Html.TextBoxFor(model => model.EmailAdd, new { @class = "main-editor-for", @placeholder = @Html.DisplayNameFor(model => model.EmailAdd), @id = "emailadd" })
            </span>
            <br />
            <span>@Html.ValidationMessageFor(model => model.EmailAdd)</span>
        </div>
 
        <div class="div-email-country-wrapper">
            <span>
                @Html.TextBoxFor(model => model.ConfirmEmailAdd, new { @class = "main-editor-for", @placeholder = @Html.DisplayNameFor(model => model.ConfirmEmailAdd), @id = "confirm_email" })
            </span>
            <br />
            <span>@Html.ValidationMessageFor(model => model.ConfirmEmailAdd)</span>
        </div>

