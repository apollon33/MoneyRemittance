            <span>
                @Html.RadioButtonFor(model => model.Gender, true, new { @id = "male", @checked = "checked" })<label>Male</label>
                @Html.RadioButtonFor(model => model.Gender, false, new { @id = "female" })<label>Female</label>
                @Html.RadioButtonFor(model => model.Gender, false, new { @id = "other" })<label>Other</label>
            </span>
        </div>

        <div class="div-email-country-wrapper">
            <span>
                @Html.TextBoxFor(model => model.Country, new { @class = "main-editor-for", @placeholder = @Html.DisplayNameFor(model => model.Country), @id = "country" })
            </span>
            <br />
            <span>@Html.ValidationMessageFor(model => model.Country)</span>
