        <div class="div-password-wrapper">
            <span>
                @Html.PasswordFor(model => model.Password, new { @class = "main-editor-for", @placeholder = @Html.DisplayNameFor(model => model.Password), @id = "password" })
            </span>
            <br />
            <span>@Html.ValidationMessageFor(model => model.Password)</span>
        </div>

        <div class="div-password-wrapper">
            <span>
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "main-editor-for", @placeholder = @Html.DisplayNameFor(model => model.ConfirmPassword), @id = "confirm_password" })
            </span>
            <br />
            <span>@Html.ValidationMessageFor(model => model.ConfirmPassword)</span>   
        </div>

        <div id="div-iagree-wrapper">
            <span>
                @Html.CheckBoxFor(model => model.Agree, new { @id = "iagree" })<label>I agree to money remittance terms</label>
            </span>
            <span>@Html.ValidationMessageFor(model => model.Agree)</span>    
        </div>

        <div id="div-join-button">
            <input type="submit" value="Join Now, It's Free" id="input-join" />
        </div>
